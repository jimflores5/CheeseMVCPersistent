@model List<CheeseMVC.Models.Cheese>

<style>
    .field-validation-error {
        color: red;
    }
</style>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <td>Category</td>
        <th>Rating</th>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
            <td>@cheese.Category.Name</td>
            <td>@cheese.Rating</td>
        </tr>
    }

</table>

@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a> | <a asp-controller="Cheese" asp-action="Remove">Eat Cheese</a></p>
<hr/>
<p><a asp-controller="Menu" asp-action="Index">View Cheese Menus</a></p>

