@using CheeseMVC.Models
@model List<Menu>

@{
    ViewData["Title"] = "Menus";
}

<h2>Index of menus</h2>

@if (Model.Count == 0)
{
    <p>No menus yet!</p>
}

@foreach (Menu menu in Model)
{
    <ul><a asp-controller="Menu" asp-action="ViewMenu" asp-route-id="@menu.ID">@menu.Name</a></ul>
}

<hr/>
<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>

